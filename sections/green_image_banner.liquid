{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="gren_img--section section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="green_img--container">
      {% if section.settings.img != blank %}
        <div class="green_img--img">
          <img src="{{ section.settings.img | image_url }}" width="100%">
        </div>
      {% endif %}
      <div class="green_img--content-container">
        {% if section.settings.subheading != blank %}
          <h2 class="green__sub-heading">{{ section.settings.subheading }}</h2>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="green__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.button_lbl != blank %}
          <a href="{{ section.settings.url }}" class="green_img--button">{{ section.settings.button_lbl }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Green Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "label":"Image",
      "id":"img"
    },
    {
      "type": "text",
      "label":"Sub Heading",
      "id":"subheading"
    },
    {
      "type": "text",
      "label":"Heading",
      "id":"heading"
    },
    {
      "type": "url",
      "label":"URL",
      "id":"url"
    },
    {
      "type": "text",
      "label":"Button Label",
      "id":"button_lbl"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets":[
    {
      "name":"Green Image Banner"
    }
  ]
}
{% endschema %}

