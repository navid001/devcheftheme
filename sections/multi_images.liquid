{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="multi_image--section section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="multi_image--container">
    <div class="multi_image--img-one">
      {% if section.settings.img_1 != blank %}
        <img src="{{ section.settings.img_1 | image_url }}" width="100%" alt="image-1" height="100%">
      {% endif %}
    </div>
    <div class="multi_image--img-two ">
      {% if section.settings.img_2 != blank %}
        <img src="{{ section.settings.img_2 | image_url }}" width="100%" alt="image-2" height="100%">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Multi Images",
  "settings": [
    {
      "type": "image_picker",
      "label":"Image One",
      "id":"img_1"
    },
    {
      "type": "image_picker",
      "label":"Image Two",
      "id":"img_2"
    },

    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }

  ],
  "presets": [
    {
      "name":"Multi Image"
    }
  ]
}
{% endschema %}
<style>
                .multi_image--container {
                  display: flex;
                  gap: 10px;
              }
              .multi_image--img-one {
                width: 100%;
                max-width: 50%;
            }
            .multi_image--img-two {
              width: 100%;
              max-width: 50%;
          }
          .multi_image--container img {
            object-fit: contain;
        }
        @media (max-width:767px) {
       .multi_image--container {
        gap: 0;
        flex-direction: column;
    }
          .multi_image--img-one {
        max-width: 100%;
    }
          .multi_image--img-two {
      max-width: 100%;
  }

        }
</style>
