<style>
  .testimonials-slider {
    position: relative;
    overflow: hidden;
  }

  .testimonials-slider__wrapper {
    display: flex;
    flex-wrap: wrap;
    transition: transform 0.3s ease-in-out;
  }

  .testimonial {
       padding: 20px;
    margin-right: 20px;
    background-color: #f8f8f8;
    border-radius: 5px;
    width: 100%;
    /* max-width: 400px; */
    margin-bottom: 20px;
  }

  .testimonial__content {
    margin-bottom: 10px;
    font-size: 14px;
    font-style: italic;
  }

  .testimonial__author {
    font-size: 12px;
    font-weight: bold;
    text-align: right;
  }

  .testimonial__author-name {
    display: block;
    margin-bottom: 5px;
  }

  .testimonial__author-company {
    display: block;
  }
  .testimonial__content img{max-width:120px !important;}
</style>  
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{% assign testimonials = all_testimonials | limit: section.settings.testimonials_limit %}

<div class="section-{{ section.id }}-padding ">
       <div class="testimonials-slider page-width">
          <div class="testimonials-slider__wrapper owl-carousel owl-theme">
            {% for block in section.blocks  %}
              <div class="testimonial item ">
                <div class="testimonial__content">
                  <img src="https://cdn.shopify.com/s/files/1/0752/8333/3411/files/Group_858.png?v=1683212656">
                  <p>{{ block.settings.content }}</p>
                </div>
                <div class="testimonial__author">
                  <span class="testimonial__author-name">{{ block.settings.author }}</span>
                  <span class="testimonial__author-company">{{ block.settings.company }}</span>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
</div>


    
<script>
 $('.testimonials-slider__wrapper').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
   dots:false,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:2
        },
        1000:{
            items:2
        }
    }
});
</script>
{% schema %}
  {
    "name": "Testimonial",
    "settings": [
       {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
