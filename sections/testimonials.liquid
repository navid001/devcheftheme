      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
   "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "text",
            "id": "content",
            "label": "Testimonial content",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras vehicula tellus in ex elementum congue."
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author name",
            "default": "John Doe"
          },
          {
            "type": "text",
            "id": "company",
            "label": "Author company",
            "default": "ACME Inc."
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}

